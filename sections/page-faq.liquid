   "label": "Accordion text"
},{
   "type": "color",
   "id": "title_background_color",
   "label": "Accordion background color",
   "default": "#fff"
},
{
   "type": "color",
   "id": "title_text_color",
   "label": "Accordion text color",
   "default": "#000"
},{
   "type": "color",
   "id": "background_color",
   "label": "Background color",
   "default": "#fff"
},
{
   "type": "color",
   "id": "text_color",
